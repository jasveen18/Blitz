<%-include("../partials/header")%>

<div class="container">

<header class="jumbotron">
	<div class="container">
		<h1>
			<strong class="Hotel" style="font-size: 60px;">Welcome to <span class="Finder" style="font-size: 60px;">Blitz</span></strong>
		</h1>
		<p style="color: azure;">
			View all street food stalls submitted by our users from all over the world
		</p>
		<p>
			<a class="btn btn-primary btn-lg " href="/hotels/new">Add New Stall</a>
		</p>
		<h3>Search by Food Stall OR Your Location</h3>
             <p>
            	<form action="/hotels" method="GET" class="form-inline">
            		<div class="form-group">
            			<input type="text" name="search" placeholder="Stall search..." class="form-control">
            			<input type="submit" value="Search" class="btn btn-info">
            		</div>
            	</form>
            </p>

	</div>
</header>

	
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<div class="col-lg-12">
			<h3 style="margin-bottom: 20px;">
				<%if(noMatch === undefined){ %>
				Our Most Popular Food Stalls!
				<%}else{%>
				<%= noMatch %>
				<%}%>
			</h3>
			<%hotels.forEach(function(hotel){%>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail index">
					<img style="margin-top: 10px;" src="<%=hotel.image%>">
					<div class="caption">
						<h2><%=hotel.name%></h2>
						<h4>(<%=hotel.place%>)</h4>
					</div>
					<p>
						<a href="/hotels/<%=hotel._id%>" class="btn btn-primary" style="margin-bottom: 10px;">
							More Info
						</a>
					</p>

				</div>
			</div>
			<%})%>
		</div>
	</div>

	
		
</div>

<%-include("../partials/footer")%>